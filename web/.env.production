# Production Environment Configuration
# Using development server as workaround for production build issues
NODE_ENV=production
PORT=4000

# Database Configuration (SQLite for production stability)
DATABASE_URL=file:./production.db
NEON_DATABASE_URL=file:./production.db

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Auth.js Configuration
AUTH_SECRET=your-super-secure-auth-secret-change-this-in-production
AUTH_TRUST_HOST=true
AUTH_URL=http://localhost:4000

# API Configuration
API_BASE_URL=http://localhost:4000/api
CORS_ORIGIN=http://localhost:4000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Create.xyz Integration (Optional)
NEXT_PUBLIC_CREATE_BASE_URL=https://www.create.xyz
NEXT_PUBLIC_CREATE_HOST=create.xyz
NEXT_PUBLIC_PROJECT_GROUP_ID=your-project-group-id

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@signinsoft.net

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance
CACHE_TTL=3600
STATIC_CACHE_MAX_AGE=31536000