{
	"include": [
		"src/**/*.{ts,tsx,js,jsx}",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*",
		"./src/global.d.ts",
		"./src/vite-env.d.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"plugins/**/*",
		"vite.config.ts",
		"vitest.config.ts",
		"postcss.config.js",
		"tailwind.config.js"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [".", "./.react-router/types"],
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": false,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
